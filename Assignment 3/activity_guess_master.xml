<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuessMaster"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Tickets: "
        tools:layout_gravity="right" />

    <ImageView
        android:id="@+id/entityImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_gravity="center" />

    <TextView
        android:id="@+id/entityName"
        android:text="EntityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/guessInput"
        android:hint="MM/DD/YYYY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal">

        <TableRow>

            <Button
                android:id="@+id/btnGuess"
                android:text="Submit Guess" />

            <Button
                android:id="@+id/btnClear"
                android:text="Change Entity" />

        </TableRow>
    </TableLayout>

</LinearLayout>
